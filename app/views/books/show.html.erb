
<div class="container px-5 px-sm-0">
    <div class="row">
      <!--Book.newで、ストロングパラメータに箱の中のデータを送信する、その後、ストロングパラメータ内のデータを引き出してCREATEする-->
<%= render 'books/list', book: Book.new, user: @user %>

<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody><tr>
          <td><%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
          </td>
          <% end %>
          <td><%= link_to book_path do %>
          <%= @book.title %></td><% end %>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path, class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
        </tr>
      </tbody></table>
    </div>
    </div>
    </div>